
<%= form_for @task do |f| %>
  <%= f.hidden_field :story_id %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body, size: "60x12" %>
    </p>
    <p>
      <%= f.label :completed %><br>
      <%= f.check_box :completed %>
    </p>
  <%= f.submit "Create" %>
<% end %>