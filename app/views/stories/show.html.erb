<%= link_to 'Show all', :boards %>
<h2>Story detail</h2>
        <div><%= link_to 'Back to board', board_path(@story.board_id) %></div>
<p>
  <strong>Title:</strong>
  <%= @story.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @story.body %>
</p>
<h3>Create new Task for this story</h3>
<%= render 'tasks/edit' %>

<h3>Tasks for this story</h3>
<% @story.tasks.each do |task| %>
  <p>
    <strong>Title:</strong>
    <b><%= task.id %> - <%= task.title %></b>
  </p>
    <p>
    <strong>Completed:</strong>
    <%= task.completed %>
  </p>
  <p>
    <strong>Body:</strong>
    <%= task.body %>
  </p>

  <%= task.created_at %> 
          <ul>
        <li><%= link_to 'Show', task_path(task) %></li>
        <li><%= link_to 'Update', edit_task_path(task) %></li>
        <li><%= link_to 'Destroy', task_path(task),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></li>
        </ul>
<% end %>
