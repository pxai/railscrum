<%= form_for([@board, @story]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :completed %><br>
    <%= f.checbox :completed %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>